#include <algorithm>
#include <string>

class Solution {
public:
    bool isAnagram(string s, string t) {
        // Check if the lengths of the strings are equal
        if (s.length() != t.length()) {
            return false;
        }

        // Sort the characters in both strings
        sort(s.begin(), s.end());
        sort(t.begin(), t.end());

        // Compare the sorted strings
        return s == t;
    }
};
